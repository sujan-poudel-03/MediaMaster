<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SqliteDisplayActivity">


    <TableLayout
        android:id="@+id/table_display_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:stretchColumns="*"
        tools:ignore="MissingConstraints">

        <!-- Table headers -->
        <TableRow>
            <TextView
                android:text="ID"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:text="Name"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:text="Address"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:text="Phone"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /> <!-- Placeholder for update button -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /> <!-- Placeholder for delete button -->
        </TableRow>
    </TableLayout>


    <FrameLayout
        android:id="@+id/update_card_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>